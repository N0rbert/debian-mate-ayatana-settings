# This file is sourced by Xsession(5), not executed.

if [ "x$DESKTOP_SESSION" = "xmate" ] || [ "x$XDG_SESSION_DESKTOP" == "xmate" ]; then
    if [ -z "$GTK_MODULES" ] ; then
        GTK_MODULES="canberra-gtk-module"
    else
        GTK_MODULES="$GTK_MODULES:canberra-gtk-module"
    fi
    export GTK_MODULES

    # Sadly these environment variables cause applications to segfault.
    # For example:
    #  - Telegram doesn't work with QT_STYLE_OVERRIDE=gtk
    #  - Rosegarden doesn't work with QT_ACCESSIBILITY=1
    # export QT_STYLE_OVERRIDE=gtk
    # export QT_ACCESSIBILITY=1
fi
